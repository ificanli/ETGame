{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ET.App Watcher",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "./Bin/ET.App.dll",
                "--SceneName=Watcher",
                "--StartConfig=Release",
                "--Console"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "ET.App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "./Bin/ET.App.dll",
                "--Process=1",
                "--SceneName=WOW",
                "--StartConfig=Localhost",
                "--Console"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to Unity",
            "type": "vstuc",
            "request": "attach"
        }
    ]
}
