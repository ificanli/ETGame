<Project Sdk="Microsoft.NET.Sdk">    
    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <RootNamespace>ET</RootNamespace>
        <LangVersion>default</LangVersion>
        <AssemblyName>ET.Model</AssemblyName>
        <Configurations>Debug;Release</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>
    <PropertyGroup>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    </PropertyGroup>
    <PropertyGroup>
        <ETRootDir>$([MSBuild]::EnsureTrailingSlash($([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\..\..\..\' ))))</ETRootDir>
        <MainPackageFile>$(ETRootDir)MainPackage.txt</MainPackageFile>
        <MainPackageDesignTimeProps>$(MSBuildProjectDirectory)/$(BaseIntermediateOutputPath)ET.Model.MainPackage.g.props</MainPackageDesignTimeProps>
    </PropertyGroup>
    
    <Import Project="$(MainPackageDesignTimeProps)" Condition="'$(DesignTimeBuild)' == 'true' and Exists('$(MainPackageDesignTimeProps)')" />
    
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <DefineConstants>DOTNET</DefineConstants>
        <OutputPath>$(ETRootDir)Bin</OutputPath> 
        <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <Optimize>false</Optimize>
        <NoWarn></NoWarn>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'"> 
        <DefineConstants>DOTNET</DefineConstants>
        <OutputPath>$(ETRootDir)Bin</OutputPath>
        <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <NoWarn></NoWarn>      
        <Optimize>true</Optimize>
        <DebugType>full</DebugType>
        <DebugSymbols>true</DebugSymbols>
        <Deterministic>false</Deterministic>
    </PropertyGroup>

    <!-- 生成 IDE 设计时引用文件，解决 ET.Model 无法显示 MainPackage 引用代码 -->
    <Target Name="GenerateDesignTimePackageProps" BeforeTargets="BeforeBuild" Inputs="$(MainPackageFile)" Outputs="$(MainPackageDesignTimeProps)" Condition="Exists('$(MainPackageFile)')">
        <Exec Command="pwsh -NoProfile -ExecutionPolicy Bypass -File &quot;$(MSBuildThisFileDirectory)Generate-ETModelMainPackageProps.ps1&quot; -RootDir &quot;$(ETRootDir.TrimEnd('\'))&quot; -OutputPath &quot;$(MainPackageDesignTimeProps)&quot;" />
    </Target>

    <!-- 动态读取 MainPackage.txt 并生成 Compile 项 -->
    <Target Name="AddPackageCompileItems" BeforeTargets="BeforeBuild;BeforeResolveReferences;CoreCompile">
        <ReadLinesFromFile File="$(MainPackageFile)">
            <Output TaskParameter="Lines" ItemName="PackageNames" />
        </ReadLinesFromFile>
        <ItemGroup>
            <PackageNames Remove="@(PackageNames)" Condition="'%(Identity)' == ''" />
        </ItemGroup>
        <!-- 生成通配符路径 -->
        <ItemGroup>
            <ModelShareGlobs Include="@(PackageNames->'$(ETRootDir)Packages/%(Identity)/Scripts/Model/Share/**/*.cs')" />
            <ModelServerGlobs Include="@(PackageNames->'$(ETRootDir)Packages/%(Identity)/Scripts/Model/Server/**/*.cs')" />
            <ModelClientGlobs Include="@(PackageNames->'$(ETRootDir)Packages/%(Identity)/Scripts/Model/Client/**/*.cs')" />
            <CodeModeModelGlobs Include="@(PackageNames->'$(ETRootDir)Packages/%(Identity)/CodeMode/Model/Server/**/*.cs')" />
        </ItemGroup>
        <!-- 使用 CreateItem 展开通配符 -->
        <CreateItem Include="@(ModelShareGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
        <CreateItem Include="@(ModelServerGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
        <CreateItem Include="@(ModelClientGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
        <CreateItem Include="@(CodeModeModelGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
    </Target>

    <!-- Debug 配置下添加 Test 目录 -->
    <Target Name="AddTestCompileItems" BeforeTargets="BeforeBuild;BeforeResolveReferences;CoreCompile" Condition="'$(Configuration)'=='Debug'">
        <ReadLinesFromFile File="$(MainPackageFile)">
            <Output TaskParameter="Lines" ItemName="TestPackageNames" />
        </ReadLinesFromFile>
        <ItemGroup>
            <TestPackageNames Remove="@(TestPackageNames)" Condition="'%(Identity)' == ''" />
        </ItemGroup>
        <ItemGroup>
            <ModelTestGlobs Include="@(TestPackageNames->'$(ETRootDir)Packages/%(Identity)/Scripts/Model/Test/**/*.cs')" />
        </ItemGroup>
        <CreateItem Include="@(ModelTestGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
    </Target>
    
    <ItemGroup>
        <ProjectReference Include="$(ETRootDir)Packages/cn.etetet.memorypack/DotNet~/ET.MemoryPack.Generator/ET.MemoryPack.Generator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
        <ProjectReference Include="$(ETRootDir)Packages/cn.etetet.sourcegenerator/DotNet~/ET.SourceGenerator/ET.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
        <ProjectReference Include="..\..\..\cn.etetet.loader\DotNet~\ET.Loader.csproj" />
        <ProjectReference Include="..\..\..\cn.etetet.mathematics\DotNet~\ET.Mathematics.csproj" />
    </ItemGroup>

    <!-- sourcegenerator use -->
    <ItemGroup>
        <CompilerVisibleProperty Include="DotNetAssembly" />
    </ItemGroup>

	<ItemGroup>
	<Reference Include="Sirenix.OdinInspector.Attributes">
	<HintPath>..\..\..\..\Assets\Plugins\Sirenix\Assemblies\Sirenix.OdinInspector.Attributes.dll</HintPath>
	</Reference>
	</ItemGroup>
</Project>
