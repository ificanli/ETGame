<Project Sdk="Microsoft.NET.Sdk">

    <Sdk Name="Aspire.AppHost.Sdk" Version="9.4.2"/>

    <PropertyGroup>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    </PropertyGroup>

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <UserSecretsId>8f9c0f1d-7d76-4862-aca9-702a42bd47d0</UserSecretsId>
        <RootNamespace>ET</RootNamespace>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <OutputPath>$(ProjectDir)../../../Bin</OutputPath>
      <WorkingDirectory>$(ProjectDir)</WorkingDirectory>
      <NoWarn>;0169;0649;3021;8981;2022;UNT0006;NU1903</NoWarn>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <OutputPath>$(ProjectDir)../../../Bin</OutputPath>
      <WorkingDirectory>$(ProjectDir)</WorkingDirectory>
      <Optimize>false</Optimize>
      <DebugSymbols>true</DebugSymbols>
      <NoWarn>;0169;0649;3021;8981;2022;UNT0006;NU1903</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Aspire.Hosting.AppHost" Version="9.4.2"/>
    </ItemGroup>

    <ItemGroup>
      <None Update="appsettings.Release.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="appsettings.Develop.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="Properties\launchSettings.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <!-- 直接引用编译好的dll -->
    <ItemGroup>
        <Reference Include="ET.Core">
            <HintPath>$(ProjectDir)../../../Bin/ET.Core.dll</HintPath>
        </Reference>
        <Reference Include="ET.Model">
            <HintPath>$(ProjectDir)../../../Bin/ET.Model.dll</HintPath>
        </Reference>
        <Reference Include="ET.Mathematics">
            <HintPath>$(ProjectDir)../../../Bin/ET.Mathematics.dll</HintPath>
        </Reference>
        <Reference Include="ET.Recast">
            <HintPath>$(ProjectDir)../../../Bin/ET.Recast.dll</HintPath>
        </Reference>
        
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="CommandLineParser" Version="2.9.1" />
        <PackageReference Include="MemoryPack" Version="1.10.0" />
        <PackageReference Include="MongoDB.Driver" Version="2.17.1" />
        <PackageReference Include="NLog" Version="5.3.2" />
    </ItemGroup>

</Project>
