<?xml version="1.0" encoding="utf-8" ?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<targets async="true">
		<!-- 注意这里并没有开启bufferSize，上线要关闭Debug日志 -->
		<target name="ServerDebug" xsi:type="File"
				openFileCacheTimeout="30"
				keepFileOpen="true"
				fileName="${currentDir}/Logs/${date:format=yyyyMMddHH}.${logger}.Debug.log"
				deleteOldFileOnStartup="false"
				layout="${longdate} ${callsite:className=false:methodName=false:fileName=true:includeSourcePath=false:skipFrames=2} ${message}" />
	</targets>

	<targets async="true">
		<target name="ServerInfo" xsi:type="File"
				bufferSize="10240"
				openFileCacheTimeout="30"
				keepFileOpen="true"
				fileName="${currentDir}/Logs/${date:format=yyyyMMddHH}.${logger}.Info.log"
				deleteOldFileOnStartup="false"
				layout="${longdate} ${message}" />
	</targets>

	<targets async="true">
		<target name="ServerWarn" xsi:type="File"
				bufferSize="10240"
				openFileCacheTimeout="30"
				keepFileOpen="true"
				fileName="${currentDir}/Logs/${date:format=yyyyMMddHH}.${logger}.Warn.log"
				deleteOldFileOnStartup="false"
				layout="${longdate} ${message}" />
	</targets>

	<targets async="true">
		<target name="ServerError" xsi:type="File"
				openFileCacheTimeout="10"
				keepFileOpen="true"
				fileName="${currentDir}/Logs/${date:format=yyyyMMddHH}.${logger}.Error.log"
				deleteOldFileOnStartup="false"
				layout="${longdate} ${callsite:className=false:methodName=false:fileName=true:includeSourcePath=false:skipFrames=2} ${message}" />
	</targets>
	
	<targets async="true">
		<target name="All" xsi:type="File"
				openFileCacheTimeout="10"
				keepFileOpen="true"
				fileName="${currentDir}/Logs/All.log"
				deleteOldFileOnStartup="true"
				layout="${longdate} ${event-properties:sceneName:padding=-10} ${callsite:className=false:methodName=false:fileName=true:includeSourcePath=false:skipFrames=2} ${message}" />
	</targets>

	<targets async="true">
		<target name="ErrorConsole" xsi:type="Console" layout="${longdate} ${message}" />
	</targets>

	<rules>
		<logger ruleName="ServerDebug" name="*" minlevel="Trace" maxlevel="Error" writeTo="ServerDebug" />
		<logger ruleName="ServerInfo" name="*" minlevel="Info" maxlevel="Info" writeTo="ServerInfo" />
		<logger ruleName="ServerWarn" name="*" minlevel="Warn" maxlevel="Warn" writeTo="ServerWarn" />
		<logger ruleName="ServerError" name="*" minlevel="Error" maxlevel="Error" writeTo="ServerError" />
		<logger ruleName="ServerAll" name="*" minlevel="Trace" maxlevel="Error" writeTo="All" />
	</rules>
</nlog>