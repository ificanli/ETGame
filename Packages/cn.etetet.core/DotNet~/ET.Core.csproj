<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <RootNamespace>ET</RootNamespace>
        <LangVersion>default</LangVersion>
        <Configurations>Debug;Release</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>

    <PropertyGroup>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
      <DefineConstants>DOTNET;ET10</DefineConstants>
      <OutputPath>$(SolutionDir)Bin</OutputPath>
      <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
      <Optimize>false</Optimize>
      <NoWarn>CA2022</NoWarn>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">  
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks> 
      <DefineConstants>DOTNET;ET10</DefineConstants>
      <OutputPath>$(SolutionDir)Bin</OutputPath>
      <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
      <NoWarn>CA2022</NoWarn>
      <Optimize>true</Optimize>
      <DebugType>full</DebugType>
      <DebugSymbols>true</DebugSymbols>
      <Deterministic>false</Deterministic>
    </PropertyGroup>

    <!-- 动态读取 MainPackage.txt 并生成 Compile 项 -->
    <Target Name="AddPackageCompileItems" BeforeTargets="BeforeBuild;BeforeResolveReferences;CoreCompile">
        <ReadLinesFromFile File="$(SolutionDir)MainPackage.txt">
            <Output TaskParameter="Lines" ItemName="PackageNames" />
        </ReadLinesFromFile>
        <ItemGroup>
            <PackageNames Remove="@(PackageNames)" Condition="'%(Identity)' == ''" />
        </ItemGroup>
        <!-- 生成通配符路径 -->
        <ItemGroup>
            <CoreShareGlobs Include="@(PackageNames->'$(SolutionDir)Packages/%(Identity)/Scripts/Core/Share/**/*.cs')" />
            <CoreServerGlobs Include="@(PackageNames->'$(SolutionDir)Packages/%(Identity)/Scripts/Core/Server/**/*.cs')" />
            <CodeModeCoreGlobs Include="@(PackageNames->'$(SolutionDir)Packages/%(Identity)/CodeMode/Core/Server/**/*.cs')" />
        </ItemGroup>
        <!-- 使用 CreateItem 展开通配符 -->
        <CreateItem Include="@(CoreShareGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
        <CreateItem Include="@(CoreServerGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
        <CreateItem Include="@(CodeModeCoreGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
    </Target>
    
    <ItemGroup>
        <ProjectReference Include="$(SolutionDir)Packages\cn.etetet.sourcegenerator\DotNet~\ET.SourceGenerator\ET.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
        <ProjectReference Include="$(SolutionDir)Packages\cn.etetet.memorypack\DotNet~\ET.MemoryPack.Generator\ET.MemoryPack.Generator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
        <ProjectReference Include="$(SolutionDir)Packages\cn.etetet.memorypack\DotNet~\ET.MemoryPack\ET.MemoryPack.csproj" />
        <PackageReference Include="CommandLineParser" Version="2.9.1" />
        <PackageReference Include="MongoDB.Driver" Version="3.5.0" />
        <PackageReference Include="NLog" Version="6.0.6" />
    </ItemGroup>
    
    <ItemGroup>
      <Reference Include="Unity.Mathematics">
        <HintPath>..\..\..\Library\ScriptAssemblies\Unity.Mathematics.dll</HintPath>
      </Reference>
    </ItemGroup>
</Project>
