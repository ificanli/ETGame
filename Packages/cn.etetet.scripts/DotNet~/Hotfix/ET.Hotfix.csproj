<Project Sdk="Microsoft.NET.Sdk">    
    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework> 
        <RootNamespace>ET</RootNamespace>
        <LangVersion>default</LangVersion>
        <AssemblyName>ET.Hotfix</AssemblyName>
        <Configurations>Debug;Release</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>
    <PropertyGroup>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <DefineConstants>DOTNET;ET10</DefineConstants>
        <OutputPath>$(SolutionDir)Bin</OutputPath> 
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <NoWarn></NoWarn>
        <Optimize>false</Optimize>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <DefineConstants>DOTNET;ET10</DefineConstants>
        <OutputPath>$(SolutionDir)Bin</OutputPath>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
        <NoWarn></NoWarn>
        <Optimize>true</Optimize>
        <DebugType>full</DebugType>
        <DebugSymbols>true</DebugSymbols>
        <Deterministic>false</Deterministic>
    </PropertyGroup>
    <!-- 动态读取 MainPackage.txt 并生成 Compile 项 -->
    <Target Name="AddPackageCompileItems" BeforeTargets="BeforeBuild;BeforeResolveReferences;CoreCompile">
        <ReadLinesFromFile File="$(SolutionDir)MainPackage.txt">
            <Output TaskParameter="Lines" ItemName="PackageNames" />
        </ReadLinesFromFile>
        <ItemGroup>
            <PackageNames Remove="@(PackageNames)" Condition="'%(Identity)' == ''" />
        </ItemGroup>
        <!-- 生成通配符路径 -->
        <ItemGroup>
            <HotfixShareGlobs Include="@(PackageNames->'$(SolutionDir)Packages/%(Identity)/Scripts/Hotfix/Share/**/*.cs')" />
            <HotfixServerGlobs Include="@(PackageNames->'$(SolutionDir)Packages/%(Identity)/Scripts/Hotfix/Server/**/*.cs')" />
            <HotfixClientGlobs Include="@(PackageNames->'$(SolutionDir)Packages/%(Identity)/Scripts/Hotfix/Client/**/*.cs')" />
            <CodeModeHotfixGlobs Include="@(PackageNames->'$(SolutionDir)Packages/%(Identity)/CodeMode/Hotfix/Server/**/*.cs')" />
        </ItemGroup>
        <!-- 使用 CreateItem 展开通配符 -->
        <CreateItem Include="@(HotfixShareGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
        <CreateItem Include="@(HotfixServerGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
        <CreateItem Include="@(HotfixClientGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
        <CreateItem Include="@(CodeModeHotfixGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
    </Target>

    <!-- Debug 配置下添加 Test 目录 -->
    <Target Name="AddTestCompileItems" BeforeTargets="BeforeBuild;BeforeResolveReferences;CoreCompile" Condition="'$(Configuration)'=='Debug'">
        <ReadLinesFromFile File="$(SolutionDir)MainPackage.txt">
            <Output TaskParameter="Lines" ItemName="TestPackageNames" />
        </ReadLinesFromFile>
        <ItemGroup>
            <TestPackageNames Remove="@(TestPackageNames)" Condition="'%(Identity)' == ''" />
        </ItemGroup>
        <ItemGroup>
            <HotfixTestGlobs Include="@(TestPackageNames->'$(SolutionDir)Packages/%(Identity)/Scripts/Hotfix/Test/**/*.cs')" />
        </ItemGroup>
        <CreateItem Include="@(HotfixTestGlobs)">
            <Output TaskParameter="Include" ItemName="Compile" />
        </CreateItem>
    </Target>
    
    <ItemGroup>
        <ProjectReference Include="$(SolutionDir)Packages\cn.etetet.memorypack\DotNet~\ET.MemoryPack.Generator\ET.MemoryPack.Generator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
        <ProjectReference Include="$(SolutionDir)Packages\cn.etetet.sourcegenerator\DotNet~\ET.SourceGenerator\ET.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
        <ProjectReference Include="..\Model\ET.Model.csproj" />
    </ItemGroup>
    
    <!-- sourcegenerator use -->
    <ItemGroup>
        <CompilerVisibleProperty Include="DotNetAssembly" />
    </ItemGroup>

</Project>